<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="DoctorHelper.Patient.PatientRegister"
             Title="Регистрация пациента">
    <ContentPage.Content>
        <StackLayout Padding="16">
            <Label Text="Фамилия"/>
            <Entry x:Name="SurnameEntry"/>
            <Label Text="Имя"/>
            <Entry x:Name="NameEntry"/>
            <Label Text="Отчество"/>
            <Entry x:Name="PatronymicEntry"/>
            <Label Text="Логин"/>
            <Entry x:Name="LoginEntry"/>
            <Label Text="Пароль"/>
            <Entry IsPassword="true" x:Name="PasswordEntry"/>
            <Label Text="Повторите пароль"/>
            <Entry IsPassword="true" x:Name="RepeatPasswordEntry"/>
            <Label Text="Номер смены (ПН)"/>
            <Entry x:Name="MondayShiftEntry"/>
            <Label Text="Номер смены (ВТ)"/>
            <Entry x:Name="TuesdayShiftEntry"/>
            <Label Text="Номер смены (СР)"/>
            <Entry x:Name="WednesdayShiftEntry"/>
            <Label Text="Номер смены (ЧТ)"/>
            <Entry x:Name="ThursdayShiftEntry"/>
            <Label Text="Номер смены (ПТ)"/>
            <Entry x:Name="FridayShiftEntry"/>
            <Button Text="Регистрация" x:Name="RegisterButton" Clicked="RegisterButton_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
