<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DoctorHelper.Patient.Doctors"
             Title="Выбор врача">
    <ContentPage.Content>
        <StackLayout Padding="16" Spacing="10">
            <Label Text="Список врачей клиники:" FontAttributes="Bold" HorizontalOptions="StartAndExpand"/>
            <Picker x:Name="DoctorsPicker"/>
            <Button Text="Выбрать врача" x:Name="ChooseDoctorButton" Clicked="ChooseDoctorButton_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>